{
  "name": "vietqrjs",
  "version": "1.1.1",
  "description": "Support generate VietQR Code",
  "main": "dist/index.js",
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "format-all": "prettier --write \"src/**/*.ts\"",
    "format": "pretty-quick --staged --pattern \"**/*.*(ts|tsx|json)\"",
    "test": "jest",
    "test:cov": "jest --coverage",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "release:patch": "npm version patch && npm publish --access public",
    "release:minor": "npm version minor && npm publish --access public",
    "release:major": "npm version major && npm publish --access public"
  },
  "keywords": [
    "VietQR",
    "Napas",
    "Napas247",
    "QRCode"
  ],
  "author": "Tuan Tran",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-deprecation": "^2.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^6.0.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.0",
    "supertest": "^6.1.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "canvas": "^2.8.0",
    "country-data": "^0.0.31",
    "crc": "^4.3.2",
    "lodash": "^4.17.21",
    "qrcode": "^1.4.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "coverageReporters": [
      "json-summary"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "verbose": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trantuan94/vietqrjs.git"
  },
  "bugs": {
    "url": "https://github.com/trantuan94/vietqrjs/issues"
  }
}
